.goodsimg {
  margin-top: 30rpx;
  display: flex;
  width: 750rpx;
  height: 500rpx;
  justify-content: center;
  align-items: center;
}

.goodsimg image {
  width: 500rpx;
  height: 500rpx;
}

.goods_text .goodsprice {
  padding: 15rpx;
  font-size: 50rpx;
  font-weight: 600;
  color: rgb(223, 33, 33);
}

.goods_info .goodsdetail {
  color: rgb(129, 123, 123);
  font-size: 40rpx;
}

.goods_info .xiangxi {
  font-size: 32rpx;
  font-weight: 600;
  padding: 20rpx;
  border-top: 1rpx var(--themeColor) solid;
}

.btm_tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}

.btm_tool .tools_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}

.btm_tool .tools_item button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.btm_tool .carts {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgb(248, 101, 3);
  color: white;
  font-size: 35rpx;
  font-weight: 600;
  border-top: 1rpx solid #ccc;
}

.btm_tool .bay {
  flex: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgb(247, 4, 4);
  color: white;
  font-size: 35rpx;
  font-weight: 600;
  border-top: 1rpx solid #ccc;
}
